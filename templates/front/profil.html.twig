{% extends 'base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <div class="row no-gutter">
            <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>
            <div class="col-md-8 col-lg-6">
                <div class="login d-flex align-items-center py-5">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 col-lg-8">
                                <div class="profile-head">
                                    <div class="profil">
                                        <div class="d-flex justify-content-center h-100">
                                            <div class="image_outer_container">
                                                <div class="orange_icon"></div>
                                                <div class="image_inner_container">
                                                    <img src="{{ asset('img/profils/' ~app.user.image ~'.jpg') }}">
                                                </div>
                                            </div>
                                        </div>
                                        <h3 class="login-heading mb-4">Bienvenue {{ app.user.username }} !</h3>
                                        <!-- ======= Rank Section ======= -->
                                        <h6>Mon rang :
                                            {% for role in app.user.roles %}
                                                {% if(role == 'ROLE_ADMIN') %}
                                                    Admin et
                                                {% else %}
                                                    {% if( tricks | length > 0) %}
                                                        Auteur
                                                    {% else %}
                                                        Utilisateur
                                                    {% endif %}
                                                    {% if comments | length > 0 %}
                                                        - contributeur
                                                    {% endif %}
                                                {% endif %}
                                            {% endfor %}
                                        </h6><!-- End Rank Section -->
                                        <h6>
                                            Mon email : {{ app.user.email }}
                                        </h6>
                                        <div class="text-center">
                                            <a class="small" href="{{ path('email_form') }}">Modifier mon mot de passe.</a></div>
                                        <h6 class="activity">
                                            Mon activit√© :
                                        </h6>
                                    </div>
                                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                                        <li class="nav-item">
                                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home"
                                               role="tab" aria-controls="home" aria-selected="true">
                                                <i class="fa fa-file">
                                                    <span class="badge badge-info">{{ tricks | length }}</span>
                                                </i>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile"
                                               role="tab" aria-controls="profile" aria-selected="false">
                                                <i class="fa fa-comments">
                                                    <span class="badge badge-info">{{ comments | length }}</span>
                                                </i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="tab-content profile-tab" id="myTabContent">
                                            <div class="tab-pane fade show active" id="home" role="tabpanel"
                                                 aria-labelledby="home-tab">
                                                <div class="row">
                                                    <div class="col-md-12 offset-md-3">
                                                        <h4>Mes articles</h4>
                                                        <ul class="timeline posts">
                                                            {% for trick in tricks %}
                                                                <li>
                                                                    <a href="{{ path('trick_detail', {'id': trick.id}) }}">{{ trick.title | slice(0, 26) }}
                                                                        ...</a>
                                                                    <p>
                                                                        <a href="#" class="float-right">{{ trick.createdAt | date('d/m/Y') }}</a><br>
                                                                        {{ trick.description | slice(0, 150) | raw }}
                                                                        ...
                                                                    </p>
                                                                </li>
                                                            {% endfor %}
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="tab-pane fade" id="profile" role="tabpanel"
                                                 aria-labelledby="profile-tab">
                                                <div class="row">
                                                    <div class="col-md-12 offset-md-3">
                                                        <h4>Mes commentaires</h4>
                                                        <ul class="timeline comments">
                                                            {% for comment in comments %}
                                                                <li>
                                                                    <a href="#">{{ comment.title | slice(0,24) }}...</a>
                                                                    <p>
                                                                        <a href="#" class="float-right">{{ comment.createdAt | date('d/m/Y') }}</a><br>
                                                                        {{ comment.content | slice(0, 150) | raw }}
                                                                        ...
                                                                    </p>
                                                                </li>
                                                            {% endfor %}
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}